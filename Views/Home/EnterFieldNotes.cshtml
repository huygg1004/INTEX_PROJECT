@{
    ViewBag.Title = "Field Notes";
}

<style>
    table{
        font-family:Georgia, 'Times New Roman', Times, serif;
        border-collapse:separate;
        width:80%;
    }

</style>
<header class="masthead" style="background-image: url('https://i2.wp.com/banyantlc.org/wp-content/uploads/2020/09/Note-Taking-Strategies.jpg?fit=1568%2C890&ssl=1') ">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>Field Notes</h1>
                    <span class="subheading">For Researchers</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-preview">
                <a class="btn btn-primary" asp-action="ViewFieldNotes">Click here to View All Field Notes</a>
                <br />
                <div class="row m-1 p-1">
                    <form method="post">
                        <h3>General Information</h3>
                        <div>
                            <label @*asp-for=""*@>Square:</label>
                            <input />
                        </div>
                        <div>
                            <label @*asp-for=""*@>Area:</label>
                            <input @*asp-for=""*@ />
                        </div>
                        <div>
                            <label @*asp-for=""*@>Burial:</label>
                            <input @*asp-for=""*@ />
                        </div>
                        <div>
                            <label @*asp-for=""*@>Date:</label>
                            <input @*asp-for=""*@ type="date" />
                        </div>
                        <div>
                            <label @*asp-for=""*@>Observers:</label>
                            <input @*asp-for=""*@ />
                        </div>
                        <h3>I. Overall Impression</h3>
                        <div>
                            <label @*asp-for=""*@>Perservation Index:</label>
                            <select @*asp-for=""*@>
                                <option value="">Select one</option>
                                <option value="I">I</option>
                                <option value="II">II</option>
                                <option value="III">III</option>
                                <option value="IV">IV</option>
                                <option value="V">V</option>
                            </select>
                        </div>
                        <div>
                            <label @*asp-for=""*@>Hair Color:</label>
                            <input @*asp-for=""*@ />
                        </div>
                        <div>
                            <label @*asp-for=""*@>Observations:</label>
                            <textarea rows="4" cols="100" @*asp-for=""*@ />Some notes go here</textarea>
                        </div>
                        <h3>II. Skull Analysis</h3>
                        <h5>A. Skull Features (gender estimation)</h5>

                        <table>
                            <tr>
                                <th>Skull Features</th>
                                <th>Male</th>
                                <th>Female</th>
                            </tr>
                            <tr>
                                <td>Robust</td>
                                <td>Yes</td>
                                <td>No</td>
                            </tr>
                            <tr>
                                <td>Supraoribital ridges</td>
                                <td>Heavy</td>
                                <td>Light</td>
                            </tr>
                            <tr>
                                <td>Orbit Edge</td>
                                <td>Blunt</td>
                                <td>Sharp</td>
                            </tr>
                            <tr>
                                <td>Parietal bossing</td>
                                <td>No</td>
                                <td>Yes</td>
                            </tr>
                            <tr>
                                <td>Gonion</td>
                                <td>Flat</td>
                                <td>Pointed</td>
                            </tr>
                            <tr>
                                <td>Nuchal Crest</td>
                                <td>Larger</td>
                                <td>Smaller</td>
                            </tr>
                            <tr>
                                <td>Zygomatic Crest</td>
                                <td>Longer</td>
                                <td>Shorter</td>
                            </tr>
                        </table>

                        <br />


                        <div>
                            <label @*asp-for=""*@>Gender</label>
                            <select @*asp-for=""*@>
                                <option value="">Select one</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>

                        <br />
                        <h5>B. Skull Sutures (age estimation)</h5>
                        <div>
                            <label @*asp-for=""*@>Sphenooccipital synchondrosis</label>
                            <select @*asp-for=""*@>
                                <option value="">Select one</option>
                                <option value="Closed">Closed (>age 18-25)</option>
                                <option value="Not Closed">Not Closed</option>
                            </select>
                        </div>
                        <div>
                            <label @*asp-for=""*@>Lambdoid suture</label>
                            <select @*asp-for=""*@>
                                <option value="">Select one</option>
                                <option value="Closed">Closed (>age 45-50)</option>
                                <option value="Not Closed">Not Closed</option>
                            </select>
                        </div>
                        <div>
                            <label @*asp-for=""*@>Squamos suture</label>
                            <select @*asp-for=""*@>
                                <option value="">Select one</option>
                                <option value="Closed">Closed (>age 60-65)</option>
                                <option value="Not Closed">Not Closed</option>
                            </select>
                        </div>
                        <h5>C. Dentition (age estimation)</h5>
                        <div>
                            <label @*asp-for=""*@>Tooth Attrition:</label>
                            <select @*asp-for=""*@>
                                <option value="">Select one</option>
                                <option value="I">I</option>
                                <option value="II">II</option>
                                <option value="III">III</option>
                                <option value="IV">IV</option>
                                <option value="V">V</option>
                            </select>
                        </div>
                        <div>
                            <label @*asp-for=""*@>Tooth Eruption Age Estimate:</label>
                            <input @*asp-for=""*@ />
                        </div>

                        <br />
                        <h3>III. Pelvis Analysis</h3>
                        <h5>A. Pelvis Features (gender estimation)</h5>
                        <table>
                            <tr>
                                <th>Pelvis Features</th>
                                <th>Male</th>
                                <th>Female</th>
                            </tr>
                            <tr>
                                <td>Ventral Arc</td>
                                <td>Yes</td>
                                <td>No</td>
                            </tr>
                            <tr>
                                <td>Subpubic Angle</td>
                                <td>Narrow</td>
                                <td>Wide</td>
                            </tr>
                            <tr>
                                <td>Sciatic Notch</td>
                                <td>Narrow</td>
                                <td>Wide</td>
                            </tr>
                            <tr>
                                <td>Medial IP ramus</td>
                                <td>Flat</td>
                                <td>Ridged</td>
                            </tr>
                        </table>

                        <div>
                            <label @*asp-for=""*@>Gender</label>
                            <select @*asp-for=""*@>
                                <option value="">Select one</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>

                        <br />
                        <h5>B. Pubic Symphisis (age estimation)</h5>
                        <div>
                            <label @*asp-for=""*@>Age:</label>
                            <select @*asp-for=""*@>
                                <option value="">Select one</option>
                                <option value="I">I</option>
                                <option value="II">II</option>
                                <option value="III">III</option>
                                <option value="IV">IV</option>
                                <option value="V">V</option>
                            </select>
                        </div>
                        <br />
                        <h3>IV. Limb Analysis</h3>
                        <h5>A. Epiphyseal Union</h5>
                        <div>
                            <label @*asp-for=""*@>Femur:</label>
                            <select @*asp-for=""*@>
                                <option value="">Select one</option>
                                <option value="Closed">Closed(>age 17)</option>
                                <option value="Not Closed">Not Closed</option>
                            </select>
                        </div>
                        <div>
                            <label @*asp-for=""*@>Humerus:</label>
                            <select @*asp-for=""*@>
                                <option value="">Select one</option>
                                <option value="Closed">Closed(>age 14)</option>
                                <option value="Not Closed">Not Closed</option>
                            </select>
                        </div>

                        <br />
                        <div>
                            <label @*asp-for=""*@>Observers Estimation of Age at Death:</label>
                            <input @*asp-for=""*@ />
                        </div>

                        <br />
                        <div>
                            <label @*asp-for=""*@>Observers Estimation of Gender:</label>
                            <select @*asp-for=""*@>
                                <option value="">Select one</option>
                                <option value="Female">Female</option>
                                <option value="Male">Male</option>
                                <option value="Ineterminate">Indeterminate</option>
                            </select>
                        </div>
                        <h3>V. Stature Estimation</h3>
                        <div>
                            <label @*asp-for=""*@>A. Femur Length(mm)</label>
                            <input @*asp-for=""*@ />
                        </div>
                        <div>
                            <label @*asp-for=""*@>B. Humerus Length(mm)</label>
                            <input @*asp-for=""*@ />
                        </div>
                        <div>
                            <label @*asp-for=""*@>Estimate of Stature</label>
                            <input @*asp-for=""*@ />
                        </div>
                        <br />
                        <h3>VI. Pathology</h3>
                        <div>
                            <label @*asp-for=""*@>A. Osteophytosis</label>
                            <select @*asp-for=""*@>
                                <option value="">Select one</option>
                                <option value="None">None</option>
                                <option value="Slight">Slight</option>
                                <option value="Moderate">Moderate</option>
                                <option value="Moderate">Heavy</option>
                            </select>
                        </div>

                        <label>B. Caries and Periodontal Disease (noted on Figure 1)</label>
                        <img src="~/img/disease.PNG" />
                        <input @*asp-for=""*@ />

                        <br />
                        <div>
                            <label @*asp-for=""*@>C. Notes</label>
                            <textarea rows="4" cols="100" @*asp-for=""*@ />Some notes go here</textarea>
                        </div>
                     
                         <br />

                        <h3>VII. Samples</h3>

                        <br />
                        <br />




                        @*displaying all errors from user input*@
                        @*<div asp-validation-summary="All"></div>*@

                        <button type="submit">Submit your Field Notes</button>

                    </form>

                    <br />

                </div>
            </div>
        </div>
    </div>
</div>