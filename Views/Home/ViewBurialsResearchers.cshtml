<div>

    <div class="container">

        <a asp-action="CRUD_AddData">Click here to Add another Data about Burial Site</a>


        <h2>View Data Individually Sorted</h2>

        <h3>Sorted by Location Information</h3>

        <a class="btn btn-primary btn-lg" asp-action="OsteologyR">Click here to View Additional Osteology Data</a>
        <br /><br />
        <a class="btn btn-primary btn-lg" asp-action="OsteologySkullR">Click here to View Additional Osteology Skull Data</a>
        <br /><br />
        <a class="btn btn-primary btn-lg" asp-action="DemographicR">Click here to View Additional Demographic Data</a>
        <br /><br />
        <a class="btn btn-primary btn-lg" asp-action="ArtifactBioNoteR">Click here to View Additional Artifact Bio Note Data</a>
        <br /><br />




        <table>
            <thead>
                <tr>
                    <th>Burial ID</th>

                    <th>Square</th>

                    <th>SouthToHead</th>

                    <th>SouthToFeet</th>

                    <th>WestToHead</th>

                    <th>WestToFeet</th>

                    <th>Length</th>

                    <th>Depth</th>

                    <th>DiscoveryYear</th>

                    <th>Cluster</th>

                    <th>BurialRack</th>


                </tr>
            </thead>

            @*displaying the actual submitted information*@
            <tbody>
                @foreach (var x in Model.LocationMeasurementsR)
                {
                <tr>
                    <td>@x.Id</td>
                    <td>@x.Square</td>
                    <td>@x.HeadSouth</td>
                    <td>@x.FeetSouth</td>
                    <td>@x.HeadWest</td>
                    <td>@x.FeetWest</td>
                    <td>@x.BurialLength</td>
                    <td>@x.Depth</td>
                    <td>@x.DiscoveryYear</td>
                    <td>@x.Cluster</td>
                    <td>@x.BurialRack</td>
                    <td><a asp-action="CRUD_UpdateData" asp-route-id="@x.Id">Update</a></td>
                    <td>
                        <form asp-action="CRUD_DeleteData" method="post">
                            <input type="hidden" name="id" value="@x.Id" />
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
                }


            </tbody>
        </table>
        <div page-info="@Model.PageNumberingInfo" page-classes-enabled="true" page-class="btn"
             page-class-normal="btn-outline-dark" page-class-selected="btn-danger">
        </div>
        <br />

    </div>
</div>
